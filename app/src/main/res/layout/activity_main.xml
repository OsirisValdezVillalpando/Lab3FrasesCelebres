<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNoRandom"
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/purple_500"
        android:text="@string/Generar_No"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvNoRand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GenerarNumero"/>

    <Button
        android:id="@+id/btnMostrarFrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/purple_500"
        android:text="@string/Mostrar_frase"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNoRand"
        android:onClick="ImagenAutorFrase"/>

    <TextView
        android:id="@+id/tvNoRand"
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:background="#FFEB3B"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="350sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMostrarFrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNoRandom"
        android:padding="10dp"/>
</android.support.constraint.ConstraintLayout>